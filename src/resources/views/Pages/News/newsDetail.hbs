<div class="container py-5">
    <section id="drinks">
        <h1>{{data.title}}
        </h1>
        <div class="heading heading-comment mb-3">
            <span>{{data.createdAt}}</span>
            <div class="fb-like" data-href="https://haisanco5saigon.com/news/detail/{{data.slug}}" data-width=""
                data-layout="standard" data-action="like" data-size="small" data-share="true"></div>
        </div>
    </section>
    <div class="row">
        <div class="col-md-12">
            {{{data.content}}}
        </div>
        <div class="col-md-12 mt-5">
            <ul class="nav nav-tabs mb-3" id="ex-with-icons" role="tablist">

                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="ex-with-icons-tab-2" data-mdb-toggle="tab" href="#ex-with-icons-tabs-2"
                        role="tab" aria-controls="ex-with-icons-tabs-2" aria-selected="false"><i
                            class="fas fa-chart-line fa-fw me-2"></i>Đánh giá</a>
                </li>
            </ul>
            <!-- Tabs navs -->

            <!-- Tabs content -->
            <div class="tab-content" id="ex-with-icons-content">

                <div class="tab-pane fade" id="ex-with-icons-tabs-2" role="tabpanel"
                    aria-labelledby="ex-with-icons-tab-2">
                    <div class="fb-comments" data-href="https://haisanco5saigon.com/news/detail/{{data.slug}}"
                        data-width="" data-numposts="5"></div>
                </div>
            </div>
            <!-- Tabs content -->
        </div>
    </div>
</div>